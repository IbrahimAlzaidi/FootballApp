<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@id/buttonRating" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/buttonRating"
            motion:layout_constraintEnd_toEndOf="@id/iconHolder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="@id/iconHolder"
            motion:layout_constraintStart_toStartOf="@id/iconHolder" />
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/background"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@id/imageHolder"
            android:id="@+id/holderData" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/holderData"
            motion:layout_constraintEnd_toEndOf="@id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/imageHolder"
            motion:layout_constraintStart_toStartOf="@id/background" />
    </ConstraintSet>
</MotionScene>
