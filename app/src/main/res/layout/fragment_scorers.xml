<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.footballapp.ui.leagueDetails.scorers.ScorersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        tools:context=".ui.leagueDetails.scorers.ScorersFragment">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="@dimen/margin0X"
            android:layout_marginTop="@dimen/margin0X"
            android:background="@drawable/club_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin4X"
            android:gravity="center"
            android:text="Goals"
            android:textSize="@dimen/size5X"
            app:layout_constraintBottom_toTopOf="@id/player"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view" />

        <TextView
            android:id="@+id/player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin0X"
            android:text="Player"
            android:textSize="@dimen/size3X"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/goals"
            app:layout_constraintStart_toStartOf="@id/goals"
            app:layout_constraintTop_toBottomOf="@id/goals" />

        <TextView
            android:id="@+id/goalsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin4X"
            android:layout_marginBottom="@dimen/margin0X"
            android:text="Goals"
            android:textSize="@dimen/size3X"
            app:layout_constraintBottom_toBottomOf="@id/player"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/player" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topScoreRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin0X"
            android:orientation="vertical"
            app:items="@{viewModel.topScorers.toData().topScorersInfo}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:listitem="@layout/top_score_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
