<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.footballapp.viewModel.LeagueDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.leagueDetails.LeagueDetailsFragment">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_League"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin3X"
            android:scaleType="centerInside"
            app:ImageUrl="@{viewModel.leagueDetails.toData().response.league.logo}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
            tools:src="@tools:sample/avatars" />
        <TextView
            android:id="@+id/league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.leagueDetails.toData().response.league.name}"
            app:layout_constraintStart_toEndOf="@id/image_League"
            app:layout_constraintTop_toTopOf="@id/image_League"
            app:layout_constraintBottom_toBottomOf="@id/image_League"
            android:textSize="@dimen/size3X"
            android:textColor="@color/black"
            tools:text="league name"/>
        <TextView
            android:id="@+id/league_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.leagueDetails.toData().response.league.country}"
            app:layout_constraintEnd_toStartOf="@id/image_country"
            app:layout_constraintTop_toTopOf="@id/image_country"
            app:layout_constraintBottom_toBottomOf="@id/image_country"
            android:textSize="@dimen/size3X"
            android:textColor="@color/black"
            tools:text="country name"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_country"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin3X"
            android:scaleType="centerInside"
            app:ImageUrl="@{viewModel.leagueDetails.toData().response.league.flag}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_country"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>