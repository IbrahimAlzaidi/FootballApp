<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.footballapp.model.response.standing.StandingTeamInfo" />

<!--        <variable-->
<!--            name="itemS"-->
<!--            type="com.example.footballapp.model.lineupInfo.standingTeam.Standing" />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/devider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/viewHolderStanding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#000000"
            />

        <View
            android:id="@+id/viewHolderStanding"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#C38BAFD6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/numberOfTeam"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="1"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@{String.valueOf(item.league.id)}"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/viewHolderStanding"
            app:layout_constraintTop_toTopOf="@id/viewHolderStanding"
            app:layout_constraintBottom_toBottomOf="@id/viewHolderStanding"
            app:layout_constraintEnd_toStartOf="@id/teamImage"
            />
        <ImageView
            android:id="@+id/teamImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            tools:src="@tools:sample/avatars"
            app:ImageUrl="@{item.league.logo}"
            app:layout_constraintTop_toTopOf="@id/viewHolderStanding"
            app:layout_constraintBottom_toBottomOf="@id/viewHolderStanding"
            app:layout_constraintStart_toEndOf="@id/numberOfTeam"/>
        <TextView
            android:id="@+id/nameOfTeam"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="manchester United"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@{item.league.name}"
            android:layout_marginStart="@dimen/margin2X"
            app:layout_constraintStart_toEndOf="@id/teamImage"
            app:layout_constraintTop_toTopOf="@id/viewHolderStanding"
            app:layout_constraintBottom_toBottomOf="@id/viewHolderStanding"
            />
        <TextView
            android:id="@+id/matchPoints"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="5"
            android:text="@{item.league.logo}"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin4X"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/winPoints"
            app:layout_constraintTop_toTopOf="@id/allPoints"
            app:layout_constraintBottom_toBottomOf="@id/allPoints"
            />
        <TextView
            android:id="@+id/winPoints"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="5"
            android:text="}"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin4X"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/drawPoint"
            app:layout_constraintTop_toTopOf="@id/allPoints"
            app:layout_constraintBottom_toBottomOf="@id/allPoints"
            />
        <TextView
            android:id="@+id/drawPoint"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="8"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin4X"
            android:text="}"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@id/losePoint"
            app:layout_constraintTop_toTopOf="@id/allPoints"
            app:layout_constraintBottom_toBottomOf="@id/allPoints"
            />
        <TextView
            android:id="@+id/losePoint"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="10"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin4X"
            android:text="}"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@id/allPoints"
            app:layout_constraintTop_toTopOf="@id/allPoints"
            app:layout_constraintBottom_toBottomOf="@id/allPoints"/>

        <TextView
            android:id="@+id/allPoints"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginEnd="@dimen/margin4X"
            android:text="}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
