<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/time_match</item>
    </style>

    <style name="SearchBar">
        <item name="android:padding">@dimen/margin2X</item>
        <item name="android:layout_marginVertical">@dimen/margin1X</item>
        <item name="android:layout_marginHorizontal">@dimen/margin2X</item>
        <item name="android:drawablePadding">@dimen/margin1X</item>
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:background">@drawable/shape_search</item>
    </style>

    <style name="Widget.App.CardView"
        parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">#C4C4C4</item>
        <item name="strokeWidth">4dp</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponentTow"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>
